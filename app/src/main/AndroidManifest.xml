<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.user.ws_cityguide"
          xmlns:android="http://schemas.android.com/apk/res/android">

      <uses-permission android:name="android.permission.CAMERA"/>
      <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

      <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
            <activity
                  android:name=".MainActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme.NoActionBar.Home">
                  <intent-filter>
                        <action android:name="android.intent.action.MAIN"/>

                        <category android:name="android.intent.category.LAUNCHER"/>
                  </intent-filter>
            </activity>
            <activity
                  android:name=".ListPlaceActivity"
                  android:label="@string/title_activity_list_place"
                  android:theme="@style/AppTheme.NoActionBar">
            </activity>
            <activity
                  android:name=".PlaceDetailActivity"
                  android:label="@string/title_activity_place_detail"
                  android:theme="@style/AppTheme.NoActionBar">
            </activity>
            <activity
                  android:name=".DevAddNewPlaceActivity"
                  android:label="@string/title_activity_new_place"
                  android:theme="@style/AppTheme.NoActionBar">
            </activity>
            <activity
                  android:name=".DevListPlaceActivity"
                  android:label="@string/title_activity_dev_list_place2"
                  android:theme="@style/AppTheme.NoActionBar">
            </activity>
      </application>

</manifest>